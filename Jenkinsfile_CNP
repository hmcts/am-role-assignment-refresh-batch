@Library("Infrastructure")

def type = "java"
def product = "am"
def component = "role-assignment-refresh-batch"

static LinkedHashMap<String, Object> secret(String secretName, String envVar) {
  [$class     : 'AzureKeyVaultSecret',
   secretType : 'Secret',
   name       : secretName,
   version    : '',
   envVariable: envVar
  ]
}

